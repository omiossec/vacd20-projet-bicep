{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string"
    },
    "vnetPrefix": {
      "type": "string"
    },
    "vnetLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "vmOS": {
      "type": "string",
      "defaultValue": "2019-Datacenter",
      "allowedValues": [
        "2016-Datacenter",
        "2016-Datacenter-Server-Core",
        "2016-Datacenter-Server-Core-smalldisk",
        "2019-Datacenter",
        "2019-Datacenter-Server-Core",
        "2019-Datacenter-Server-Core-smalldisk"
      ]
    },
    "localAdminPassword": {
      "type": "secureString",
      "metadata": {
        "description": "password for the windows VM"
      }
    },
    "vmPrefix": {
      "type": "string",
      "minLength": 1,
      "maxLength": 9
    },
    "environmentName": {
      "type": "string",
      "allowedValues": [
        "prod",
        "dev"
      ]
    }
  },
  "functions": [],
  "variables": {
    "defaultLocation": "[resourceGroup().location]",
    "diskSku": "Premium_LRS",
    "defaultVmName": "[format('{0}-{1}', parameters('vmPrefix'), parameters('environmentName'))]",
    "defaultVmNicName": "[format('{0}-nic', variables('defaultVmName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-06-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('vnetLocation')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "websubnet",
            "properties": {
              "addressPrefix": "[parameters('vnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('vnetName')))]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', format('{0}-nsg', parameters('vnetName')))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}-nsg', parameters('vnetName'))]",
      "location": "[parameters('vnetLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "allow-web",
            "properties": {
              "priority": 1000,
              "sourceAddressPrefix": "*",
              "protocol": "Tcp",
              "destinationPortRange": "80",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-06-01",
      "name": "[variables('defaultVmNicName')]",
      "location": "[variables('defaultLocation')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'websubnet')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/disks",
      "apiVersion": "2019-07-01",
      "name": "[format('{0}-vhd', variables('defaultVmName'))]",
      "location": "[variables('defaultLocation')]",
      "sku": {
        "name": "[variables('diskSku')]"
      },
      "properties": {
        "diskSizeGB": 32,
        "creationData": {
          "createOption": "Empty"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "name": "[variables('defaultVmName')]",
      "location": "[variables('defaultLocation')]",
      "properties": {
        "osProfile": {
          "computerName": "[variables('defaultVmName')]",
          "adminUsername": "localadm",
          "adminPassword": "[parameters('localAdminPassword')]",
          "windowsConfiguration": {
            "provisionVMAgent": true
          }
        },
        "hardwareProfile": {
          "vmSize": "Standard_F2s"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('vmOS')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[format('{0}-vhd', variables('defaultVmName'))]",
              "createOption": "Attach",
              "caching": "ReadOnly",
              "lun": 0,
              "managedDisk": {
                "id": "[resourceId('Microsoft.Compute/disks', format('{0}-vhd', variables('defaultVmName')))]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "properties": {
                "primary": true
              },
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('defaultVmNicName'))]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/disks', format('{0}-vhd', variables('defaultVmName')))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('defaultVmNicName'))]"
      ]
    }
  ]
}